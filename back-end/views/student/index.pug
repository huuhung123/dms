extends ../layouts/common.pug

block content
  h1.text-center STUDENT

  form(action="/student/search", method="GET")
    .form-group 
      input.form-control(type="text", name="q")
    .form-group 
      button.btn.btn-primary Search

  table.table.table-bordered
    thead.thead-dark
      tr
        th(scope='col') #ID
        th(scope='col') Name
        th(scope='col') Age
        th(scope='col') CreatedTime
        th(scope='col') Operation
    each student in listStudent
      tbody
        tr
          th(scope='row')= student._id
          td= student.name
          td= student.age
          td= student.createdTime
          td
            a.btn.btn-danger(href="/student/update/" + student._id) Update
            = " "
            a.btn.btn-warning(href="/student/delete/" + student._id) Delete

  a.btn.btn-primary(href="/student/create") Create student
