extends ../layouts/common.pug

block content
    h1.text-center UPDATE VISITOR

    form(action="/visitor/update/" + visitor._id, method="POST")
        .form-group 
            label.font-weight-bold Name:
            input.form-control(type="text", name="name", value=visitor.name)

        .form-group
            label.font-weight-bold Age:
            input.form-control(type="text", name="age", value=visitor.age)
        button.btn.btn-primary Update
